@model Szakdolg.Models.MunkaModel
@{
    ViewBag.Title = "Modositas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Módosítás</h2>
<br />

@using (Html.BeginForm("Mentes", "Munka", FormMethod.Post, new { enctype = "multipart/form-data" }))
{


    <div class="form-group">
        @Html.LabelFor(m => m.Munkaim.Nev)
        @Html.TextBoxFor(m => m.Munkaim.Nev, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Munkaim.Nev)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Munkaim.Elkeszult)
        @Html.TextBoxFor(m => m.Munkaim.Elkeszult, "{0:yyyy-MM-dd}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Munkaim.Elkeszult)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Munkaim.Img)
        @Html.TextBoxFor(m => m.Munkaim.Img, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Munkaim.Img)
    </div>



    @Html.HiddenFor(m => m.Munkaim.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Mentés</button>
}


@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
