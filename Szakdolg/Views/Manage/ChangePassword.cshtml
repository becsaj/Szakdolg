<div class="row justify-content-center align-items-center">
    <div class="card">
        <div class="col-md-offset-12 col-md-12 text-center ">
            <br />
            <h1 class="home-title">
                <span>Jelszó megváltoztatása</span>
            </h1>
        </div>
        <div class="card-body">

            @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <div class="form-group">
                    <div class="col-md-10">

                        <input name="OldPassword" class="effect-2" type="password" id="OldPassword" placeholder="Jelenlegi jelszó:">
                        <span class="focus-border"></span><br />

                    </div>
                </div>
                <br />
                <div class="form-group">
                    <div class="col-md-10">

                        <input name="NewPassword" class="effect-2" type="password" id="NewPassword" placeholder="Új jelszó:">
                        <span class="focus-border"></span><br />

                    </div>
                </div>
                <br />
                <div class="form-group">
                    <div class="col-md-10">

                        <input name="ConfirmPassword" class="effect-2" type="password" id="ConfirmPassword" placeholder="Jelszó megerősítése:">
                        <span class="focus-border"></span><br />

                    </div>
                </div>

                <br />

                <button type="submit" class="btnsend btnsend-2" style="margin-left:80px;">Mentés</button>
            }
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}