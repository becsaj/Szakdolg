@model Szakdolg.Models.Munka

<div class="col-sm-4">
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="~/Content/Img/@(Model.Img)" class="card-img" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Nev</h5>

                    <p class="card-text" style="float:right;display:block">Elkészült: @Model.Elkeszult.ToShortDateString()</p>

                    @if (User.IsInRole("Admin"))
                    {
                        <br />
                        <span>@Html.ActionLink("Modositas", "Modositas", "Munka", new { id = Model.Id }, new { @class = "btn btn-dark" })</span>
                        <span onclick="return confirm('Törlöd?')">@Html.ActionLink("Delete", "Delete", "Munka", new { id = Model.Id }, new { @class = "btn btn-danger" })</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>